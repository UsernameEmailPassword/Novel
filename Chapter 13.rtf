\par \pard\plain \s0\dbch\af6\langfe1033\dbch\af8\afs24\alang1081\ql\widctlpar\hyphpar0\faauto\ltrpar\loch\f4\fs24\lang1033\kerning1\cf0\sl480\slmult1\li0\ri0\lin0\rin0\fi0\ltrpar{\rtlch\hich\af3 \ltrch\loch\f3\loch
